<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta author="Sufi Afifi" />
    <title>List Users</title>
</head>
<style>
    body {
        background-color: #f2f2f2;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 16px;
        color: #333;
        margin: 0;
        padding: 0;
        display: grid;
        place-items: center;
    }
    h1 {
        text-align: center;
        font-size: 2em;
        color: #333;
        margin: 20;
        padding: 0;
    }
    table {
        margin-top: 5%;
        width: 80%;
        border-collapse: collapse;
        border: 1px solid #ddd;
        text-align: center;
    }
    table thead tr th {
        padding: 10px;
        border: 1px solid #ddd;
    }
    table tbody tr td {
        padding: 10px;
        border: 1px solid #ddd;
    }
    a {
        display: block;
        text-align: center;
        margin-top: 1rem;
        text-decoration: none;
        color: #333;
    }
    img {
        width: 100px;
        height: 100px;
    }
    button {
        width: 100px;
        height: 30px;
        border: none;
        border-radius: 5px;
        background-color: #333;
        color: #fff;
        cursor: pointer;
    }
    .msg {
        background-color: rgb(24, 148, 107);
        width: 400px;
        margin: 2% auto;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
    }
    .msg {
        background-color: rgb(170, 185, 180);
        width: 400px;
        margin: 2% auto;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
    }
    </style>
<body>
    
    <% if (user != null) { %> 
        <h2>Session Data is available</h2>
        <div class="data">
        <h3>Name: <%= user %></h3>
        <% if (data.admin == true) { %>
            <p>Priviledge: Administrator</p>
        <% } else { %>
            <p>Priviledge: User</p>
        <% } %>
        <p>ID: <%= data.id %></p>
        </div>
    <% } else { %>
        <h1>Session Data is no available</h1>
        <a href="/login"><button>Login</button></a>
        <a href="/signup"><button>Signup</button></a>
    <% } %>
    
    <h1><u>List Users</u></h1>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Phone Num</th>
                <th>Birthday</th>
                <th>Admin</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.newUser.name %></td>
                    <td><%= user.newUser.email %></td>
                    <td><%= user.newUser.phonenum %></td>
                    <td><%= user.newUser.birthday %></td>
                    <td><%= user.newUser.admin %></td>
                    <td>
                        <a href="/edit/<%= user.newUser.name %>"><button>Update</button></a>
                        <a href="/delete/<%= user.newUser.name %>"><button>Delete</button></a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/"><button>Back</button></a>
    
</body>
</html>